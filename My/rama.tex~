%% Note the difference between the commands the one is 
%% make and the other one is makes
\renewcommand{\@makechapterhead}[1]{%
  \vspace*{-60\p@}%
  {\parindent \z@ \position \reset@font
        {\Large \scshape  \thechapter }
        \par\nobreak
        \vspace*{-50\p@}%
        \interlinepenalty\@M
        \rule{\textwidth}{2pt}
        \par\nobreak
        \vspace*{-15\p@}%
        {\Large \bfseries #1\par\nobreak}
        \par\nobreak
        \vspace*{-15\p@}%
		\rule{\textwidth}{2pt}
    \vskip 1\p@
    \vskip 2\p@
  }}

\makeatother

